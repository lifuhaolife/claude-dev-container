{
  "name": "Claude Code Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "GIT_AUTHOR_NAME": "lfh",
    "GIT_AUTHOR_EMAIL": "l2448808186@gmail.com",
    "GIT_COMMITTER_NAME": "lfh",
    "GIT_COMMITTER_EMAIL": "l2448808186@gmail.com"
  },
  "forwardPorts": [35175],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "github.copilot"
      ],
      "settings": {
        "git.enableSmartCommit": true,
        "git.autofetch": true
      }
    }
  },
  "runArgs": [
    "--network=host"
  ],
  "updateRemoteUserUID": false,
  "postCreateCommand": "git config --global init.defaultBranch main && git config --global user.name \"${GIT_AUTHOR_NAME}\" && git config --global user.email \"${GIT_AUTHOR_EMAIL}\"",
  "mounts": [
    "source=${env:USERPROFILE}\\.ssh,target=/home/node/.ssh,type=bind,readonly"
  ]
}
