{
  "name": "Claude Code Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [35175],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "github.copilot"
      ],
      "settings": {
        "git.enableSmartCommit": true,
        "git.autofetch": true
      }
    }
  },
  "postCreateCommand": "git config --global init.defaultBranch main",
  "mounts": [
    "source=${env:USERPROFILE}\\.claude,target=/home/vscode/.claude,type=bind"
  ],
  "runArgs": [
    "-v", "${env:SSH_AUTH_SOCK}:/tmp/ssh-auth.sock"
  ],
  "containerEnv": {
    "SSH_AUTH_SOCK": "/tmp/ssh-auth.sock"
  }
}
